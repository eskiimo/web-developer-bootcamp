<% include ../partials/header %>


<div class="container ">
    
    <h1 style="text-align: center">Ceate new campground </h1>

    <div style="width:30%; margin:25px auto;">

        <form action="/campgrounds" method="POST">
            <div class="form-group">
                    <input class="form-control" type="text" placeholder="name.." name="name" >
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="price" name="price" min="0.5">
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Discription" name="desc">
            </div>
                      
            <div class="form-group">
                    <button class=" form-control btn bg-primary">Submit</button>
            </div>            
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>

</div>



